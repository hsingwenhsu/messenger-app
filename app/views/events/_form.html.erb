<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group mb-3" >
    <%= form.hidden_field :room_id, value: room.id%>
    <%= form.text_field :title, class: 'form-control', placeholder: "Title", id: 'event-title', required: true%>
    <%= form.date_field :event_date, class: 'form-control', placeholder: "Date", id: 'event-date', required: true%>
    <%= form.time_field :event_start, class: 'form-control', placeholder: "Start Time", id: 'event-start', required: true %>
    <%= form.time_field :event_end, class: 'form-control', placeholder: "End Time", id: 'event-end', required: true%>
    <div class="actions">
      <%= form.submit "Submit", class: "btn btn-primary", id: 'event-create' %>
    </div>
  </div>
  
<% end %>
