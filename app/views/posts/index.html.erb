<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to 'Show', room_post_path(params[:room_id], post) %></td>
        <td><%= link_to 'Edit', edit_room_post_path(params[:room_id], post) %></td>
        <td><%= link_to 'Destroy', room_post_path(params[:room_id], post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_room_post_path %>
