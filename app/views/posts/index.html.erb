<nav class="navbar navbar-expand-md navbar-dark bg-dark" style="padding: 20px"> 
    <div class="container-fluid">
    <h1 class="navbar-left white-font">
        Suffer Together!
    </h1>
    
        
    <div class="navbar-right"> 
        <h6 style="margin-right: 30px;color:white">
        Who is suffering?  &nbsp
        <%= link_to current_admin.full_name, '/enrollments', id: 'link_to_enrollment' %>
        </h6>
        <h6><%= link_to "Click here to give up. Hehehe", destroy_admin_session_path %> </h6> 
        <h6><%= link_to "View Rooms", '/rooms' %> </h6> 
    </div>
    </div>
</nav>
<div class="container">
  <div id="room-id" data-room-id="<%= @room.try(:id) %>"></div>
  <div id="admin-id" data-admin-id="<%= current_admin.id %>"></div>
  <div class="row">
    <div class="col-3 bg-light">
      <div>
        <h3 class="p-2 mt-3">
          Posts in "<%= @room.name %>"
        </h3>
        <hr>
        <%= link_to room_path(@room), class: 'room-link-sidebar', id: 'back-to-room' do %>
          <div class="btn btn-danger btn-block">
            Back to Room
          </div>
        <% end %>
        <br>
        <%= link_to new_room_post_path(@room), class: 'room-link-sidebar', id:"create_new_post" do %>
          <div class="btn btn-primary btn-block" >
            New Post
          </div>
        <% end %>
        <hr>
        <div class="course-col">
          <% @room.posts.each do |post| %>
            <%= link_to room_post_path(@room, post), class: 'room-link-sidebar' do %>
              <% active_class = (@post == post) ? 'active' : '' %>
              <div class="card no-outline mb-2 room-card <%= active_class %>">
                <div class="card-body">
                  <span class="name"><%= post.title %></span><br>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="col-9">
      <h1>
        <nav class="navbar nav-dark pt-4">
        There are <%= @room.posts.count %> post(s) in "<%= @room.name %>".
        </nav>
        <hr>
        <% @room.posts.each do |post| %>
            <%= link_to room_post_path(@room, post), class: 'room-link-sidebar' do %>
              <% active_class = (@post == post) ? 'active' : '' %>
              <div class="post-card card text-white card-has-bg click-col">  
                  <div class="card-img-overlay d-flex flex-column">
                    <div class="card-body">
                      <h1 class="card-meta"><%= post.title %></h1>
                      <small><i class="far fa-clock"></i><%= post.created_at %></small>
                    </div>
                    <div class="card-footer">
                      <div class="media">
                      
                      <div class="media-body container" >
                        <div class="row" style="display:flex">
                         
                          <img class="mr-10 rounded-circle" src="https://cdn4.iconfinder.com/data/icons/emoji-18/61/20-256.png" alt="Generic placeholder image" style="max-width:70px">
                          <h2 class="ml-3 mt-3 my-0 text-white d-block"><%= Admin.find(post.admin_id).full_name %></h2>
                          
                        </div>
                        
                        
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
      </h1>
    </div>
  </div>
</div>
