<%= form_with(url: url, model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :admin_id, value: current_admin.id %>
  <%= form.hidden_field :room_id, value: params[:room_id] %>

  <h3>Title</h3>
  <%= form.text_field :title, placeholder: "Type your title here...", class: "form-control" %>

  <h3>Content</h3>
  <%= form.text_area :content, placeholder: "Type your content here...", class: "form-control" %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
