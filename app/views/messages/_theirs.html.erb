<div class="message mb-2" style="margin-top:40px;margin-bottom:40px;">
  <div class="content-container">
    <div class="content">
      <%= message.content %>
    </div>
    <div class="author">
      <% if message.admin.id != current_admin.id %>
      <%= render 'privates/form', private: Private.new, admin1: message.admin, admin2: current_admin %>
      <% else %>
      <%= message.admin.full_name %>
      <% end%>
    </div>
  </div>
</div>
