<div class="container container-private-page">

<div class="container-search">
  <div class="input-group rounded search-bar mb-3">
    
      <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
      aria-describedby="search-addon" />
   
    <div class="input-group-append">
      <button class="btn btn-info" type="button">Search</button>
    </div>
  </div>
</div>
<div class="container-add-private">
  <%= render 'form', private: Private.new %>
</div>
<div class="container-private bg-light">
  <div id="privates-private-id" data-privates-private-id="<%= @private.try(:id) %>"></div>
  <div id="admin-id" data-admin-id="<%= current_admin.id %>"></div>

  <div class="row">
  <% @privates.each do |private| %>
    
      <div class="col" style="margin: 10px; width: 300px">
        <div class="card no-outline mb-2 private-card">
          <div class="card-body" style="text-align: center">
            <div class='name'>
              <h4 style="margin: 0px">
                <%= link_to private, class: 'private-link private-card' do %>
                  <%= private.name %>

                  <% active_class = (@private == private) ? 'active' : '' %>
                <% end %>
              </h4>
            </div>
            
            <div style="padding: 10px; justify-content: center">
              <%= render 'enrollments/form', enrollment: Enrollment.new, private: private %>
              <%
=begin%>
 <button class="btn btn-outline-primary">
                <%= link_to 'Delete private', private, method: :delete, data: { confirm: 'Are you sure?' }, :id=>["destroy_room"+private.id.to_s]%>
              </button> 
<%
=end%>
              <button class="btn btn-outline-primary">
                <%= link_to 'Update Private Room Name', edit_private_path(private), :id=>["edit_private"+private.id.to_s]  %>
              </button>
            </div>
          </div>
        </div>
      </div>
    
  <% end %>
  </div>
</div>



