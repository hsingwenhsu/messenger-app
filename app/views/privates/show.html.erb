<nav class="navbar navbar-expand-md navbar-dark bg-dark" style="padding: 20px"> 
    <div class="container-fluid">
    <h1 class="navbar-left white-font">
        Suffer Together!
    </h1>
    
        
    <div class="navbar-right"> 
        <h6 style="margin-right: 30px;color:white">
        Who is suffering?  &nbsp
        <%= link_to current_admin.full_name, '/enrollments', id: 'link_to_enrollment' %>
        </h6>
        <h6><%= link_to "Click here to give up. Hehehe", destroy_admin_session_path %> </h6> 
        <h6 style="color:white"><%= link_to "View Rooms", '/rooms' %> or <%= link_to "View Events", '/events' %></h6> 
    </div>
    </div>
</nav>

 <div class="container">

  <div id="privates-room-id" data-privates-room-id="<%= @private.try(:id) %>"></div>
  <div id="admin-id" data-admin-id="<%= current_admin.id %>"></div>
  <div class="row">
    <div class="col-3 bg-light">
      <div>
        <h3 class="p-2 mt-3">
          Sufferers
        </h3>
        <hr>
        <div class="course-col">
          <% @privates.each do |private| %>
            <%= link_to private, class: 'room-link-sidebar' do %>
              <% active_class = (@private == private) ? 'active' : '' %>
              <div class="card no-outline mb-2 room-card <%= active_class %>">
                <div class="card-body">
                  <span class='name'><%= current_admin.id == private.admin_id1 ? private.admin_name2 : private.admin_name1 %></span><br>
                  <span class='member-count'>

                  </span>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="col-9">
      <% if @private.present? %>
        <div class="chat-room">
          <nav class="navbar navbar-light">
            <span class="navbar-brand" href="#">
              <b><%= current_admin.id == @private.admin_id1 ? @private.admin_name2 : @private.admin_name1 %></b>
            </span>
           
          </nav>
          <div id="private_messages" >
            <% @private.private_messages.each do |private_message| %>
              <%= render 'private_messages/private_message', private_message: private_message %>
            <% end %>
            
          </div>
          <div class="chat-box">
            <%= render 'private_messages/form', private_message: PrivateMessage.new, private: @private %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>