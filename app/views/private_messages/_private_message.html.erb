<div class="message mb-2 <%= 'me' if private_message.admin == current_admin %>">
  
  <div class="content-container">
    <div class="content">
      <%= private_message.content %>
    </div>
    <div class="author">
      <%= private_message.admin.full_name %>
      <%= link_to 'Delete' , private_message, method: :delete, data: {confirm: 'Delete private_message?'}, id: private_message.id%>
    </div>
  </div>
</div>
