<div class="navbar navbar-dark bg-dark shadow-sm ">
    <h1 class="navbar-right white-font">Suffer Together</h1>
    <a href="#" class="navbar-link">
      <b class="white-font"><%= current_user.username %><br></b>
    </a>
  </div>
</div>
<div class="container">
  <div id="room-id" data-room-id="<%= @room.try(:id) %>"></div>
  <div id="user-id" data-user-id="<%= current_user.id %>"></div>
  <div class="row">
    <div class="col-3 bg-light">
      <% @rooms.each do |room| %>
        <%= link_to room, class: 'room-link' do %>
          <% active_class = (@room == room) ? 'active' : '' %>
          <div class="card no-outline mb-2 room-card <%= active_class %>">
            <div class="card-body">
              <span class='name'><%= room.name %></span><br>
              <span class='member-count'>
                <small><%= room.users.uniq.count %> Members</small>
              </span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-9">
      <% if @room.present? %>
        <div class="chat-room">
          
          <nav class="navbar navbar-light">
            <span class="navbar-brand" href="#">
              <b><%= @room.name %></b>
            </span>
            <small><%= @room.users.uniq.count %> Members</small>
          </nav>
          <div id="messages">
            <% @room.messages.each do |message| %>
              <%= render 'messages/message', message: message %>
            <% end %>
          </div>
          <div class="chat-box">
            <%= render 'messages/form', message: Message.new, room: @room %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @room.name %>
</p>

<%= link_to 'Edit', edit_room_path(@room) %> |
<%= link_to 'Back', rooms_path %>
